<main>
    <form class="theater-form" method="POST">
        <h1>Edit Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" placeholder="Theater name" name="title" value="{{data.title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea name="description" placeholder="Description">{{data.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input name="imageUrl" type="text" placeholder="Image Url" value="{{data.imageUrl}}">
        </div>
        <div class="check">
            {{#if data.isPublic}}
            <input name="isPublic" type="checkbox" id="check-box" checked>
            {{else}}
            <input name="isPublic" type="checkbox" id="check-box">
            {{/if}}
    
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>